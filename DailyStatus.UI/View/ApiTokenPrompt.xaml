<Window x:Class="DailyStatus.UI.View.ApiTokenPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyStatus.UI.View"
        mc:Ignorable="d"
        Title="ApiTokenPrompt" Height="100" Width="468.22">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Toggl Api token:" Grid.RowSpan="1" Grid.ColumnSpan="1"  Grid.Column="0" FontSize="20"/>
        <TextBox x:Name="ResponseTextBox" Grid.RowSpan="1" Grid.Row="0" Grid.ColumnSpan="1" Grid.Column="1"/>
        <Button Content="OK" Click="OKButton_Click" Grid.RowSpan="1"  Grid.Row="1" MaxHeight="30" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
